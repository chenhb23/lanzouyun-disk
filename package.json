{
  "name": "lanzouyun-pan",
  "version": "1.0.9",
  "private": true,
  "main": "build/electron.js",
  "homepage": "./",
  "dependencies": {
    "cheerio": "^1.0.0-rc.3",
    "electron-is-dev": "^1.2.0",
    "electron-store": "^6.0.1",
    "form-data": "^3.0.0",
    "fs-extra": "^9.0.1",
    "mobx": "^6.0.1",
    "mobx-persist": "^0.4.1",
    "mobx-react": "^7.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "scripts": {
    "react-start": "cross-env BROWSER=none react-scripts start",
    "react-build": "react-scripts build",
    "electron-start": "yarn tsc-electron-build && electron .",
    "electron-build": "yarn tsc-electron-build && electron-builder",
    "release": "yarn react-build && electron-builder --publish=always",
    "build": "yarn react-build && yarn electron-build",
    "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && yarn electron-start\"",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "tsc-build": "tsc --noEmit false --module commonjs",
    "tsc-electron-build": "tsc -p tsconfig.electron.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/cheerio": "^0.22.22",
    "@types/node": "^14.14.6",
    "@types/prettier": "2.1.2",
    "@types/react": "^16.9.55",
    "@types/react-dom": "^16.9.9",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "electron": "^10.1.5",
    "electron-builder": "23.0.2",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2",
    "react-scripts": "3.4.4",
    "typescript": "^4.0.5",
    "wait-on": "^5.2.0",
    "web-vitals": "^0.2.4"
  },
  "build": {
    "productName": "lanzouyun-disk",
    "copyright": "更多内容到 https://github.com/chenhb23/lanzouyun-disk",
    "appId": "org.chenhb23.lanzou",
    "asar": true,
    "files": [
      "build"
    ],
    "mac": {
      "category": "org.chenhb23.lanzou.client"
    }
  }
}
